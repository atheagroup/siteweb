     {% if clients|length != 0 %}
        <h3 class="title nmb">Nos Clients</h3>
        <div id="myCarousel" class="carousel slide home">
            <div class="carousel-inner">
                {% for client in clients %}
                    <div class="item {% if loop.first %} active {% endif %}">
                        <a href="https://{{ client.lienSiteweb }}" target="_blank"><center><img alt="" src="{{ asset(client.logo.AssetPath) }}" style="height: 200px;width: 200px;" /></center></a>
                        <div class="carousel-caption">
                            <h4>{{ client.nom }}</h4>
                            <p></p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
