{% extends "::layout/base.html.twig" %}

{% block titre %} {{ emploi.titre }} -  {{ parent() }}{% endblock %}
{% block description %} {{ emploi.contenu }}{% endblock %}

{% block body %}
               <h3 class="title"><span class="label label-default">DETAILS DE L'OFFRE</span><p class="pull-right"><a href="{{ path('site_frontend_emploi') }}"><span class="label label-info"> <i class="icon-chevron-left"></i> Retour aux Offres</span></a></p></h3>
               <div class="row">
                   <div class="main_content">
                       <center><h3>{{ emploi.nomEntreprise }}</h3></center>
                       <center>RECRUTE</center>
                       <center><h4>{{ emploi.titre }}</h4></center>

                   </div>
                   <div class="col-md-3">
                       <img src="{{ asset(emploi.logo.AssetPath) }}" alt="{{ emploi.logo.name }}" title="Athea Group" class="img pull-left" style="height:auto;width:150px;">
                       <div class="row">
                           <ul class="thumbnails small">

                           </ul>
                       </div>
                   </div>
                   <div class="col-md-9">
                       <ul class="social pull-right">
                           <li>
                               <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-url="http://a-smart.vn/products/itab-a989i3g-goi-dien.html" data-text="iTab A989i(3G)" data-via="a-smart.vn">Partager</a>
                               <script type="text/javascript" src="../../../platform.twitter.com/widgets.js">FaceBook</script>
                           </li>
                           <li>
                               <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-url="http://a-smart.vn/products/itab-a989i3g-goi-dien.html" data-text="iTab A989i(3G)" data-via="a-smart.vn">Like</a>
                               <script type="text/javascript" src="../../../platform.twitter.com/widgets.js">witter</script>
                           </li>
                       </ul>
                   </div>
                   <div class="col-md-8">
                       <div class="contact-information row">

                           <div class="col-md-8">
                               <p>
                                   <strong>Lieu: </strong> {{ emploi.ville.nom }}<br/>
                                   <strong>Date de publication: </strong> {{ emploi.creationDate | date("d/m/Y")}}<br/>
                                   <strong>Type(s) de métier(s): </strong> {% for metiers in emploi.metiers %}{{ metiers.nom }} {% if not loop.last %} , {% endif %}{% endfor %}<br/>
                                   <strong>Niveau(x) d'Etudes: </strong>{% for niveauxEtudes in emploi.niveauEtudes %}{{ niveauxEtudes.nom }} {% if not loop.last %} , {% endif %}{% endfor %}
                               </p>
                           </div>
                           <div class="col-md-4">
                               <p><strong>Type d'offre: </strong> {{ emploi.typeOffre }}<br/>
                                   <strong>Date limite: </strong> {{ emploi.dateLimite | date("d/m/Y")}}<br/>
                                   <strong> Expériences: </strong> {{ emploi.experiences }}<br/>
                           </div>
                       </div>
                       <h3 class="detail_title"><span class="label label-success">DESCRIPTION DE L'OFFRE</span></h3>
                       <p>{{ emploi.contenu|raw }}</p>


                   </div>
               </div>
               <br/>

{% endblock %}