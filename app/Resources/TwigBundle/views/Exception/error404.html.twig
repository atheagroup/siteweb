{% extends 'TwigBundle::layout.html.twig' %}
{% block titre %} {{ status_text }} - {{ parent() }}{% endblock %}
{% block body %}
<center>
    <div class="row" style="margin-top: 200px;">
        <div class="col-md-12">
            <div class="error-template">
                <h1>Oups! "{{ status_code }} {{ status_text }}".</h1>
                <div class="error-details">
                    La page que vous cherchez n'existe pas (ou plus).
                </div>
                <div class="error-actions">
                    <a href="{{ path('site_frontend_homepage') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Allez au site </a><a href="{{ path('site_contact_us_homepage') }}" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Nous contactez </a>
                </div>
            </div>
        </div>
    </div>

</center>

{% endblock %}